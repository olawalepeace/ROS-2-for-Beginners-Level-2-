<launch>
<!-- variable -->
    <let name="urdf_path"
         value="$(find-pkg-share final_project)/urdf/project_robot.xacro" />
    <let name="gazebo_pkg_path"
         value="$(find-pkg-share ros_gz_sim)/launch/gz_sim.launch.py" />
         
	<include file="$(var gazebo_pkg_path)" >
        <arg name="gz_args" value="empty.sdf -r" />
    </include>

    <!-- opening nodes -->
    <node pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description"
            value="$(command 'xacro $(var urdf_path)')" />
    </node>

    <node pkg="ros_gz_sim" exec="create" args="-topic robot_description" />
</launch> 